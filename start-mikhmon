#bin/bash
if pgrep "php" >/dev/null 2>&1 ; then
echo -e "\e[1;34m WELCOME MR.X \e[1;32m"
echo
echo
echo
echo "Press 1 To  Start Mikhmon "
echo "Press 2 To  Home "
read ch
if [ $ch -eq 1 ];then
killall php
fi
cd mikhmonv3
php -S 0.0.0.0:8080
exit 0
elif [ $ch -eq 2 ];then
echo -e "\e[1;34 MR.X WELCOME TO HOME \e[1;32m"
cd ~
ls
